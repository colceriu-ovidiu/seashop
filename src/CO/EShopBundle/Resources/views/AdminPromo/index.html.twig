{% set curr_menu = 'promo' %}
{% extends "COEShopBundle::admin_layout.html.twig" %}


{% block left_side %}
{% include "COEShopBundle:Admin:promo_submenu.html.twig" with { cat: 5 } %}
{% endblock %}

{% block content %}
<div class="top-bar">
	<h1>Promo list</h1>
</div><br />

{% include "COEShopBundle:Admin:flash.html.twig" %}

<form class="frm_edit" action="{{ path('admin_promo_add') }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Add</button>
    </p>
</form>

<div class="table">
<table class="listing" cellpadding="0" cellspacing="0">
    <thead>
        <tr>
            <th>Product</th>
            <th class="last" >Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.product.name }}</td>
            <td>
							<a href="{{ path('admin_promo_delete', { 'id': entity.id }) }}">delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
