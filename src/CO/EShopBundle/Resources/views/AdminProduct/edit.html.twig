{% extends "COEShopBundle::admin_layout.html.twig" %}

{% block left_side %}
{% include "COEShopBundle:Admin:catalog_submenu.html.twig" with { cat: 5 } %}
{% endblock %}

{% block content %}
<div class="top-bar">
	<h1>Product edit</h1>
	<div class="breadcrumbs"><a href="{{ path('admin_product') }}">&laquo; List</a></div>
</div>

<br style="clear:left" />


<form class="frm_edit" action="{{ path('admin_product_edit', { 'id': id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="cl" >
    	<label>Current Picture</label>
    	<img src="{{ ('uploads/prodpics/'~entity.picsrc) | apply_filter('prod_thumb') }}" />
    </div>

    <p>
        <button type="submit">Save</button>
    </p>
</form>

{% endblock %}
