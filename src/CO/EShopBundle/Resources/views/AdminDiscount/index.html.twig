	<a href="{{ path('admin_discount_edit', { 'id': '0' }) }}" class="button">ADD NEW </a>
	<h1>Discounts list</h1>
</div><br />


{% include "COEShopBundle:Admin:flash.html.twig" %}

<div class="table">
