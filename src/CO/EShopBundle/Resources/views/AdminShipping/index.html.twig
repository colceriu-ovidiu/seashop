{% set curr_menu = 'promo' %}
{% extends "COEShopBundle::admin_layout.html.twig" %}


{% block left_side %}
{% include "COEShopBundle:Admin:orders_submenu.html.twig" with { cat: 5 } %}
{% endblock %}

{% block content %}
<div class="top-bar">
	<a href="{{ path('admin_shipping_edit', { 'id': '0' }) }}" class="button">ADD NEW </a>
	<h1>Metode de livrare</h1>
</div><br />


{% include "COEShopBundle:Admin:flash.html.twig" %}

<div class="table">
<table class="listing" cellpadding="0" cellspacing="0">
    <thead>
        <tr>
            <th>Metoda</th>
            <th>Cost</th>
            <th class="last" >Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td>{{ item.name }}</td>
            <td>{{ item.price }}</td>
            <td>
		<a href="{{ path('admin_shipping_edit', { 'id': item.id }) }}">edit</a>
		<a href="{{ path('admin_shipping_delete', { 'id': item.id }) }}">delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
