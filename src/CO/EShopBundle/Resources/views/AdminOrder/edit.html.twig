{% set curr_menu = 'orders' %}
{% extends "COEShopBundle::admin_layout.html.twig" %}

{% block left_side %}
<h3>Catalog</h3>
<ul class="nav">
	<li><a href="#">Categories</a></li>
	<li class="last"><a href="#">Products</a></li>
</ul>
{% endblock %}

{% block content %}
<div class="top-bar">
	<h1>Product edit</h1>
	<div class="breadcrumbs"><a href="#">Homepage</a> / <a href="#">Contents</a></div>
</div>

<br style="clear:left" />


<form class="frm_edit" action="{{ path('admin_product_edit', { 'id': id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_product') }}">
            Back to the list
        </a>
    </li>
</ul>

{% endblock %}
