{% extends 'COEShopBundle::layout.html.twig' %}

{% block title %}E-Shop Members Login{% endblock %}

{% block content %}
	<h3>Pagina personala</h3>
	
	<br />

	<h3>Ultimele comenzi</h3>
	
<table class="listing" cellpadding="0" cellspacing="0">
    <thead>
        <tr>
            <th>ID / Nr</th>
            <th>Total</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in orders %}
        <tr>
			<td>{{ entity.id }}</td>
			<td>{{ entity.total }} RON</td>
			<td>{{ entity.createTimestamp|date('Y-m-d') }}</td>
			<td>{{ entity.status|status }}</td>
        </tr>
    {% else %}
    	<tr><td>-- nu sunt comenzi --</td></tr>
    {% endfor %}
    </tbody>
</table>


	<div class="p_separator" ></div>

	<h3>Date personale</h3>

	<form class="frm_edit" action="{{ path('_members_save_pers_data') }}" method="post" {{ form_enctype(persdata_form) }}>
			{{ form_widget(persdata_form) }}
			<button type="submit">Save</button>
	</form>
	
	<br />

{% endblock %}
