{% endblock %}

{% block content %}
<!-- TinyMCE -->
<script type="text/javascript" src="{{ asset('bundles/coeshop/js/tiny_mce/tiny_mce.js') }}"></script>
<script type="text/javascript">
	tinyMCE.init({
		mode : "exact",
		elements : "co_articlesbundle_articletype_blog,elm2",
		theme : "advanced",
		width: "600",
		height: "400"
	});
</script>
<!-- /TinyMCE -->

<div class="top-bar">
	<h1>Blog Article edit</h1>
	<div class="breadcrumbs"><a href="{{ path('admin_articles') }}">&laquo; List</a></div>
</div>

<br style="clear:left" />

<form class="frm_edit" action="{{ path('admin_article_edit', { 'id': id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Save</button>
    </p>
</form>


{% endblock %}
