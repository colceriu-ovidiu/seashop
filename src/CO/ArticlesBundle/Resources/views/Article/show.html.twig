{% extends 'COEShopBundle::layout.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ article.created|date('c') }}">{{ article.created|date('l, F j, Y') }}</time></div>
            <h2>{{ article.title }}</h2>
        </header>
        <div>
            <p>{{ article.blog | raw }}</p>
        </div>
    </article>

{% if comments_enable %}
    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Comments</h3>
            {% include 'COArticlesBundle:Comment:index.html.twig' with { 'comments': comments } %}
			
			<h3>Add Comment</h3>
			{% render 'COArticlesBundle:Comment:form' with { 'article_id': article.id } %}
        </section>
    </section>
{% endif %}

{% endblock %}
